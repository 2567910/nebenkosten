{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/place/**",
        "destination": "/place.html"
      },
      {
        "source": "/create-place/**",
        "destination": "./create-place.html"
      }
    ]

  }
}
